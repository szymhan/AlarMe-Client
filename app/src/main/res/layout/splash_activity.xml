<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashBackground">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/alarm" />

    <ProgressBar
        android:id="@+id/splash_progressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:indeterminate="false"
        android:layout_below="@+id/splash_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="65" />

    <TextView
        android:id="@+id/splash_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_progressBar"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/paytone"
        android:text="@string/title_home"
        android:textAlignment="center"
        android:textFontWeight="400"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/splash_app_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_app_name"
        android:fontFamily="@font/paytone"
        android:text="@string/author"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp" />


</RelativeLayout>