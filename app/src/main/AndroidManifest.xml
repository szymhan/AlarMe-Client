            android:exported="true"
            android:label="@string/gps_serv_desc">
            <intent-filter>
                <action android:name="pl.szymonhanzel.alarmeclient.LONGRUNSERVICE" />
            </intent-filter>
        </service>
-->
        <service
            android:name=".service.GPSUpdatesLocationService"
            android:exported="false">
        </service>

        <activity
            android:name=".component.SplashScreenActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".AlarmConfirmationActivity"></activity>
    </application>

</manifest>